# --- API runtime -------------------------------------------------------------
GRABADORA_APP_ENV=development
GRABADORA_LOG_LEVEL=INFO
GRABADORA_GPU_ENABLED=false
GRABADORA_QUEUE_BACKEND=auto
GRABADORA_MAX_UPLOAD_SIZE_MB=500

# --- Authentication ----------------------------------------------------------
# python ejecutar.py generar√° un secreto aleatorio si dejas este valor en modo local
GRABADORA_JWT_SECRET_KEY=please-change-this-secret
GRABADORA_JWT_ALGORITHM=HS256
GRABADORA_JWT_EXPIRATION_MINUTES=60

# --- Database & queue --------------------------------------------------------
GRABADORA_REDIS_URL=redis://localhost:6379/0
GRABADORA_DATABASE_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/grabadora

# --- Storage -----------------------------------------------------------------
GRABADORA_S3_ENDPOINT=http://localhost:9000
GRABADORA_S3_REGION_NAME=us-east-1
GRABADORA_S3_ACCESS_KEY=minioadmin
GRABADORA_S3_SECRET_KEY=minioadmin
GRABADORA_S3_BUCKET_AUDIO=audio
GRABADORA_S3_BUCKET_TRANSCRIPTS=transcripts
GRABADORA_S3_PRESIGNED_TTL=86400

# --- Frontend ----------------------------------------------------------------
GRABADORA_FRONTEND_ORIGIN=http://localhost:5173

# --- Whisper / transcription --------------------------------------------------
GRABADORA_ASR_MODEL=medium
GRABADORA_WHISPER_DEVICE=cpu
GRABADORA_WHISPER_COMPUTE_TYPE=int8
GRABADORA_TRANSCRIPTION_QUANTIZATION=int8

# --- Observability -----------------------------------------------------------
GRABADORA_PROMETHEUS_NAMESPACE=grabadora
